{% extends 'layouts/main.twig' %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Categories Filter -->
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-primary mb-4">Catégories</h2>
        <div class="flex flex-wrap gap-4">
            {% for category in categories %}
                <a href="/category/{{ category.id }}" 
                   class="px-4 py-2 bg-accent rounded-lg hover:bg-primary hover:text-white transition">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for cake in cakes %}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <img src="{{ cake.image_url }}" alt="{{ cake.name }}" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-xl font-bold text-primary">{{ cake.name }}</h3>
                    <p class="text-gray-600 mt-2">{{ cake.description }}</p>
                    <div class="mt-4 flex justify-between items-center">
                        <span class="text-primary font-bold">{{ cake.price }}€</span>
                        <button 
                            data-cake-id="{{ cake.id }}"
                            class="add-to-cart bg-primary text-white px-4 py-2 rounded hover:bg-primary/90">
                            Ajouter au panier
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

